# AWS Configuration
aws_region   = "eu-west-2"
cluster_name = "eks-cluster"

# ArgoCD Configuration
argocd_namespace               = "argocd"
argocd_chart_version          = "5.51.6"
argocd_domain                 = "argocd.local"
argocd_insecure               = true
argocd_service_type           = "LoadBalancer"
argocd_service_annotations    = {}
argocd_ingress_enabled        = false
argocd_ingress_annotations    = {}
argocd_ingress_tls            = []
argocd_applicationset_enabled = true

# ArgoCD Apps Configuration (App of Apps pattern)
argocd_apps_enabled      = false
argocd_apps_chart_version = "1.6.2"
argocd_apps_project      = "default"

