# AWS Configuration
aws_region = "eu-west-2"

# EKS Cluster Configuration
cluster_name       = "eks-cluster"
kubernetes_version = "1.29"
environment        = "dev"

# VPC Configuration (optimized for free tier)
vpc_cidr               = "10.0.0.0/16"
public_subnets_cidr    = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets_cidr   = ["10.0.101.0/24", "10.0.102.0/24"]

# Node Group Configuration (free tier optimized)
instance_types = ["t3.micro"]  # Free tier eligible
min_nodes      = 1
max_nodes      = 1
desired_nodes  = 1

# S3 Bucket Configuration
bucket_name   = "mlops-tf-eks-state"
force_destroy = true

# ArgoCD Configuration
argocd_namespace             = "argocd"
argocd_chart_version         = "5.51.6"
argocd_domain                = "argocd.example.com"
argocd_insecure              = true
argocd_service_type          = "LoadBalancer"  # Options: ClusterIP, NodePort, LoadBalancer
argocd_service_annotations   = {}
argocd_ingress_enabled       = false
argocd_ingress_annotations   = {}
argocd_ingress_tls           = []
argocd_applicationset_enabled = true